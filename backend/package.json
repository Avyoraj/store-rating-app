{
  "name": "store-rating-backend",
  "version": "1.0.0",
  "description": "Backend API for store rating application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "test:rating-system": "jest --testPathPattern=rating-system --run",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:setup && npm run db:migrate && npm run db:seed",
    "db:reset-hard": "node scripts/reset-database.js && npm run db:migrate && npm run db:seed",
    "rating:verify": "node scripts/verify-rating-system.js",
    "rating:fix": "node scripts/verify-rating-system.js --fix",
    "monitoring:setup": "node scripts/setup-monitoring.js",
    "monitoring:verify": "node scripts/verify-monitoring.js",
    "test:monitoring": "jest --testPathPattern=monitoring-enhanced --watchAll=false"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ]
  }
}
